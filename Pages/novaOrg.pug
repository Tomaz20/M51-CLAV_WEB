extends ./Templates/layout
block corpo
    #nova-organizacao-form.panel.panel-default
        .panel-heading
            h1.page-header Nova Organização  
        .panel-body
            .form-group
                table
                    tr
                        td(style="width:10%")
                            label Nome: 
                        td(style="width:80%")
                            input(
                                size="70"
                                v-model="name"
                            )
                    tr
                        td(style="padding-top:10px")
                            label Sigla: 
                        td
                            input(
                                size="70"
                                v-model="initials"
                            )
            input.btn.btn-xs.btn-default.col-sm-2(
                type="button" 
                @click="add" 
                value="Adicionar" 
                :disabled="!(name && initials)"
            )
            p.col-sm-7 {{ message }}
    //-

    

append scripts    
    script(src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.14.1/lodash.min.js")
    script(src="/Scripts/novaOrg.vue")