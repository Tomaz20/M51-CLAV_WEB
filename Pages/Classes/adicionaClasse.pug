extends ../Templates/layout
block corpo
    #nova-classe-form.panel.panel-default
        .panel-heading
            h1.page-header Nova Classe  
        .panel-body
            .form-group
                table
                    //-TIPO/ NIVEL
                    tr
                        td(style="width:10%")
                            label Tipo: 
                        td(style="width:80%")
                            select( v-model="type")
                                option(value=1) Classe_N1
                                option(value=2) Classe_N2
                                option(value=3) Classe_N3
                                option(value=4) Classe_N4

                    //-PAI
                    tr(v-if="type>1 && parentsReady")
                        td(style="width:10%")
                            label Pai: 
                        td(style="width:80%")
                            select( v-model="parent")
                                option(v-for="(p,index) in parents" :value="p.id")
                                    | {{ p.Code }}
            
                    //-CODIGO
                    tr
                        td(style="padding-top:10px")
                            label Código: 
                        td
                            input(
                                size="70"
                                v-model="code"
                            )

                    //-TITULO   
                    tr
                        td(style="padding-top:10px")
                            label Título: 
                        td
                            input(
                                size="70"
                                v-model="title"
                            )

                    //-DESCRIÇÃO
                    tr
                        td(style="padding-top:10px")
                            label Descrição: 
                        td
                            textarea(
                                cols="72"
                                lines="5"
                                v-model="description"
                            )

                    //-NOTAS DE APLICAÇÃO
                    tr
                        td(style="padding-top:10px")
                            label Nota(s) de Aplicação: 
                        td
                            textarea(
                                cols="72"
                                lines="5"
                                v-model="newAppNote"
                                @keyup.ctrl.enter="addNewAppNote" 
                            )
                            button(@click="addNewAppNote") Ok
                                   
                            ul(v-if="appNotes && appNotes.length")
                                li(v-for="(note,index) in appNotes")
                                    button(@click="appNotes.splice(index,1)") x
                                    | {{note.Note}}
                    
                    //-EXEMPLOS DE NA
                    tr
                        td(style="padding-top:10px")
                            label Exemplo(s) de Nota(s) de Aplicação: 
                        td
                            textarea(
                                cols="72"
                                lines="5"
                                v-model="newExAppNote"
                                @keyup.ctrl.enter="addNewExAppNote" 
                            )
                            button(@click="addNewExAppNote") Ok
                       
                            ul(v-if="exAppNotes && exAppNotes.length")
                                li(v-for="(ex,index) in exAppNotes")
                                    button(@click="exAppNotes.splice(index,1)") x
                                    | {{ex}}

                    //-NOTAS DE EXCLUSÃO
                    tr
                        td(style="padding-top:10px")
                            label Nota(s) de Exclusão: 
                        td
                            textarea(
                                cols="72"
                                lines="5"
                                v-model="newDelNote"
                                @keyup.ctrl.enter="addNewDelNote" 
                            )
                            button(@click="addNewDelNote") Ok
                                   
                            ul(v-if="delNotes && delNotes.length")
                                li(v-for="(note,index) in delNotes")
                                    button(@click="delNotes.splice(index,1)") x
                                    | {{note.Note}}

                    //-TIPO DE PROCESSO
                    tr(v-if="type==3")
                        td(style="padding-top:10px")
                            label Tipo de Processo: 
                        td
                            input(
                                type="radio"
                                value="PC"
                                v-model="procType"
                            ) 
                            |  Processo Comum
                            br
                            input(
                                type="radio"
                                value="PE"
                                v-model="procType"
                            )
                            |  Processo Específico

                    //-PROCESSO TRANSVERSAL
                    tr(v-if="type==3")
                        td(style="padding-top:10px")
                            label Processo Transversal: 
                        td
                            input(
                                type="radio"
                                value="S"
                                v-model="procTrans"
                            ) 
                            |  Sim
                            br
                            input(
                                type="radio"
                                value="N"
                                v-model="procTrans"
                            )
                            |  Não

                    //-DONOS
                    tr(v-if="type==3 && orgsReady")
                        td(style="padding-top:10px")
                            label Dono(s): 
                        td
                            select( v-model="newOwner")
                                option(v-for="(o,index) in orgList" :value="o")
                                    | {{ o.Sigla }}
                            button(
                                @click="ownerList.push(newOwner)"
                            ) +

                            ul(v-if="ownerList")
                                li(v-for="(o,index) in ownerList")
                                    | {{ o.Sigla }} - {{ o.Nome }}
                                    button(
                                        @click="ownerList.splice(index,1)"
                                    ) x

                    //-PARTICIPANTES
                    tr(v-if="type==3 && procTrans=='S'")
                        td(style="padding-top:10px")
                            label Participantes: 
                        td
                            table
                                tr
                                    td
                                        select( v-model="newParticipantType")
                                            option(v-for="key in Object.keys(participants)")
                                                | {{ key }}
                                        select( v-model="newParticipant")
                                            option(v-for="(o,index) in orgList" :value="o")
                                                | {{ o.Sigla }}
                                        button(
                                            @click="participants[newParticipantType].push(newParticipant)"
                                        ) +
                                tr
                                    td
                                        ul
                                            li(v-for="key in Object.keys(participants)" v-if="participants[key] && participants[key].length>0")
                                                b {{ key }}
                                                    span(v-if="participants[key] && participants[key].length>1") es
                                                ul
                                                    li(v-for="(p, index) in participants[key]")
                                                        | {{ p.Sigla }} - {{ p.Nome }}
                                                        button(
                                                            @click="participants[key].splice(index, 1)"
                                                        ) x
                    
                    //-PROCESSOS RELACIONADOS
                    tr(v-if="type==3 && classesReady")
                        td(style="padding-top:10px")
                            label Processos Relacionados: 
                        td
                            select( v-model="newRelProc")
                                option(v-for="(c,index) in classList" :value="c")
                                    | {{ c.Code }}
                            button(
                                @click="relProcs.push(newRelProc)"
                            ) +

                            ul(v-if="relProcs && relProcs.length")
                                li(v-for="(c,index) in relProcs")
                                    | {{ c.Code }} - {{ c.Title }}
                                    button(
                                        @click="relProcs.splice(index, 1)"
                                    ) x

                    //-LEGISLAÇÕES                            
                    tr(v-if="type==3 && legsReady")
                        td(style="padding-top:10px")
                            label Legislação(s): 
                        td
                            select( v-model="newLegislation")
                                option(v-for="(l,index) in legList" :value="l")
                                    | {{ l.Número }}
                            button(
                                @click="newLegList.push(newLegislation)"
                            ) +

                            ul(v-if="newLegList")
                                li(v-for="(l,index) in newLegList")
                                    | {{ l.Número }} - {{ l.Titulo }}
                                    button(
                                        @click="newLegList.splice(index,1)"
                                    ) x

                    //-STATUS
                    tr
                        td(style="padding-top:10px")
                            label Status: 
                        td
                            input(
                                size="70"
                                v-model="status"
                            )
                                    
            input.btn.btn-xs.btn-default.col-sm-2(
                type="button" 
                @click="add" 
                value="Adicionar" 
                :disabled=`!(
                    ((type>1 && parent) || type==1) && 
                    code
                )`
            )
            p.col-sm-7 {{ message }}
    //-

    

append scripts    
    //-script(src="https://cdn.jsdelivr.net/npm/vue-resource@1.3.4")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.14.1/lodash.min.js")
    script(src="/Scripts/Classes/adicao.vue")