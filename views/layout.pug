extends ./_bootstrap
append head
	title M51-CLAV 
		if title
			| - #{title}

append styles
	meta(name="author",content="Tomás Ferreira")
	link(rel="stylesheet", href="/stylesheets/bootstrap-theme.min.css")
	link(href="/stylesheets/styles.css" rel="stylesheet" type="text/css")
	link(href='/stylesheets/dashboard.css', rel='stylesheet')
	link(href='/stylesheets/theme.css', rel='stylesheet')
	link(href='/stylesheets/signin.css', rel='stylesheet')
	link(href='/stylesheets/font-awesome.min.css', rel='stylesheet')
	link(rel="icon" href="https://cdn1.iconfinder.com/data/icons/dotted-charts/512/links_diagram-128.png")
	

block body
	.topbarfixoverlap
		nav.navbar.navbar-inverse.navbar-default.navbar-static-top.nav-top-custom-style.customnav
			.container-fluid
				.navbar-header
					//button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					//button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#users', aria-expanded='false', aria-controls='users')
						span.sr-only Toggle authentication
						span.glyphicon.glyphicon-user(style="color: white")
					if page=="index"
						a(href="#" style="cursor:default").navbar-brand
							span.glyphicon.glyphicon-home(style="color: white; padding-right:10px")
							| CLAV – Plataforma para a Classificação e Avaliação da Informação Arquivística
					else
						a(href="/" data-toggle="tooltip" data-placement="bottom" title="Voltar à página inicial").navbar-brand
							span.glyphicon.glyphicon-home(style="color: white; padding-right:10px")
							| CLAV

				//collapsable on mobile, fixed in desktop
				#navbartop.navbar-collapse.collapse
					if page!="index"
						ul.nav.navbar-nav.navbar-left
							//--------------------------------------------------------------------
							
							if user
								li(v-for="linha in linhas" :style="linha.style")
									a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false' style="padding-left:7px;padding-right:7px")
										| {{ linha.valor }} 
										span.caret
									ul.dropdown-menu(role="menu")
										li
											a(v-if="!linha.newCons" :href='linha.consultar') Consultar
											a(v-else :href='linha.consultar') {{linha.newCons}}
										li
											a(v-if="!linha.newSub" :href='linha.submeter') Submeter
											a(v-else :href='linha.submeter') {{linha.newSub}}
								
							else
								li(v-for="(linha,index) in linhas" :style="linha.style")
									a(:href="linha.consultar")
										| {{linha.valor}}

							//--------------------------------------------------------------------

					ul.nav.navbar-nav.navbar-right
						if user
							li 
								a(href='/users/perfil')
									b(style="color: white") #{user.name} 
									span.glyphicon.glyphicon-user(style="color: white")
							li
								a(:href="'/auth/logout?l='+location") Logout
						else
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
									| Login 
									span.caret
								form.dropdown-menu(role='menu' action="/auth/login" method="post")
									input#email.form-control(name='username' type='text', placeholder='Email', required='')
									
									input#password.form-control(name='password' type='password', placeholder='Password', required='')
									
									input(type="hidden" :value="location" name="location")

									button.btn.btn-block(type='submit') Login
								//-
									a.btn.btn-primary.btn-block(href="/auth/loginFB")
										span.fa.fa-facebook
										|  Facebook
									
									a.btn.btn-danger.btn-block(href="/auth/loginG")
										span.fa.fa-google
										|  Google
							//li
								a(href='/users/registar') Registar

				//collapsable, only appears on mobile		
				#navbar.collapse
					//-ul.nav.navbar-nav
						li
							a(href='/organizacoes') Entidades
						li
							a(href='/legislacao') Legislação
						li
							a(href='/classes') Classes
						li
							a(href='/tabelasSelecao') Tabelas de Seleção
						li
							a(href='/termosIndice') Termos de Índice
		
	.row
		.container-fluid
			.row
				//does not appear on mobile
				if sidebar
					.col-sm-3.col-md-2.sidebar(style="padding-bottom:60px; position:fixed; height:100%; top:0px; padding-top:71px; z-index:-1")
						div(style="position:relative")
							block lateral

						//-ul.nav.nav-sidebar#navegacaoleft
							if user
								li(v-for="linha in linhas")
									accordion
										panel(:header="linha.valor")
											ul.nav
												li
													a(:href='linha.consultar') Consultar
												li
													a(:href='linha.submeter') Submeter
							
							else
								li(v-for="linha in linhas")
									a(:href="linha.consultar")
										| {{linha.valor}}

							li
								accordion
									panel(header="Testes")
										ul.nav
											li
												a(href='/users/pedido_submetido/1') Pedido Submetido
											li
												a(href='/organizacoes/area_trabalho') Área de Entidade
											li
												a(href='/organizacoes/registo_entidade') Registo de Entidades
											li
												a(href='/organizacoes/registo_utilizador') Registo de Utilizadores
											li
												a(href='/organizacoes/questionario') Questionário
											li
												a(href='/organizacoes/autenticacao') Autenticação
											li
												a(href='/organizacoes/autenticacao_email') Autenticação por Email
											li
												a(href='/organizacoes/entidade') Página da Entidade
											li
												a(href='/tabelasSelecao/submeter') Escolha do Tipo de TS
											li
												a(href='/tabelasSelecao/submeter/escolher_processos') Escolha de Processos
											li
												a(href='/tabelasSelecao/submeter/passos') Passos para criação de TS
											li
												a(href='/tabelasSelecao/alteracao') Alteração da TS
					
					.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(style="position:absolute;padding-top:0; padding-bottom:70px;margin-left:230px !important")
						h3
							if success_msg!=""
								.alert.alert-success #{success_msg}

							if warn_msg!=""
								.alert.alert-warning #{warn_msg}
							
							if error_msg!=""
								.alert.alert-danger #{error_msg}

							if error!=""
								.alert.alert-danger #{error}
							
						block corpo

				
				else
					.col-lg-12.main(style="margin-left:30px; margin-right:30px; position:absolute; padding-top:0; padding-bottom:70px")
						h3
							if success_msg!=""
								.alert.alert-success #{success_msg}

							if warn_msg!=""
								.alert.alert-warning #{warn_msg}
							
							if error_msg!=""
								.alert.alert-danger #{error_msg}

							if error!=""
								.alert.alert-danger #{error}
							
						block corpo

				#message
					modal(
						title="Atenção!" 
						:value="modalMsgShow"
						@closed="modalMsgShow=false"

						small
					) 
						.modal-body(slot="modal-body")
							center {{modalMsg}}
						.modal-footer(slot="modal-footer")
							button(@click="modalMsgShow=false") Ok

block footer
	table
		tr
			td(width="30%")
				a(href="http://dglab.gov.pt/" target="_blank") DGLAB - Direção-Geral do Livro, dos Arquivos e das Bibliotecas
			//td
				a(href="#") + Informações
			//td
				a(href="#") Perguntas Frequentes
			td
				a(href="mailto:clav@dglab.gov.pt" data-toggle="tooltip" data-placement="top" title="clav@dglab.gov.pt") Contactos
			//td
				a(href="#") Mapa do Site


